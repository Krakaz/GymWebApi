@model IEnumerable<WebApi.Models.Promotion>

@{
    ViewData["Title"] = "Список акций";
}
<h2>Список акций</h2>

<table class="table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var dtStart = item.DtFrom.ToString("dd.MM.yyyy");
            var dtEnd = item.DtTo?.ToString("dd.MM.yyyy") ?? "не ограничено";

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @dtStart
                </td>
                <td>
                    @dtEnd
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ImageName)
                    </td>*@
                <td>
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Details", "DetailsAsync", new { id = item.Id }, new { @class = "btn btn-success" })
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", id = "#hl-delete-promotion" })*@
                        <form method="post" asp-controller="Promotions" asp-action="Delete" style="display: inline">
                            <input type="hidden" name="id" value=@item.Id />
                            <input class="btn btn-danger" type="submit" value="Delete" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create", "Create")
